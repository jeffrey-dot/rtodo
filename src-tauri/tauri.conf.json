{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rtodo",
  "version": "0.1.0",
  "identifier": "com.ljw.rtodo",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "rtodo",
        "label": "main",
        "width": 375,
        "height": 667,
        "minWidth": 320,
        "minHeight": 480,
        "resizable": true,
        "decorations": true
      },
      {
        "title": "rtodo-compact",
        "label": "compact",
        "url": "/compact",
        "width": 500,
        "height": 80,
        "resizable": false,
        "decorations": true,
        "center": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
