{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rtodo",
  "version": "0.1.0",
  "identifier": "com.ljw.rtodo",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "rtodo",
        "width": 375,
        "height": 667,
        "minWidth": 320,
        "minHeight": 480,
        "resizable": true,
        "menu": {
          "file": {
            "title": "文件",
            "submenu": [
              {
                "accelerator": "CmdOrCtrl+Q",
                "label": "退出",
                "role": "quit"
              }
            ]
          },
          "view": {
            "title": "视图",
            "submenu": [
              {
                "label": "精简模式",
                "accelerator": "CmdOrCtrl+M",
                "action": "open-compact-mode"
              }
            ]
          }
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
